<%-include("partials/header.ejs")  %>
<h1 class="form-title">Add New Task</h1>
<div class="new-task">
    <form action="/newtask" method="post">
        <label for="taskName">Task Name </label>
        <input type="text" name="taskName" id="taskName" maxlength="20" required>
        <label for="taskList">List </label>
        <select name="taskList" id="taskList">
            <option value="task">Personal Task</option>
            <option value="job">Work</option>
        </select>
        <label for="desc">Task description</label>
        <textarea name="desc" id="task-desc" cols="30" rows="5" maxlength="60" placeholder="Please less than 60 characters..."></textarea>
        <input type="submit" value="confirm" class="btn add-task">
    </form>
</div>

<%-include("partials/footer.ejs") %>